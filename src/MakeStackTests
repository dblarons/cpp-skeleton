CXX=clang++
RM=rm -f
CPPFLAGS=-g -D_REENTRANT -pthread -I/sw/include/root -Wall
LDFLAGS=-g
LDLIBS=-lm -ldl -lz

# List all .cpp files here
SRCS=testStack.cpp

# subst replaces all instances of .cpp with .o in SRCS
OBJS=$(subst .cpp,.o,$(SRCS))

# the build target executable:
TARGET=caltest

all: $(TARGET)

# TARGET depends on $(OBJS)
$(TARGET): $(OBJS)
	$(CXX) $(LDFLAGS) -o output $(OBJS) $(LDLIBS)

testStack.o: testStack.cpp Stack_t.h Stack_t.cpp
	$(CXX) $(CPPFLAGS) -c testStack.cpp

# Clean up
clean:
	$(RM) $(OBJS)
